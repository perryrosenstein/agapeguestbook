!!!
%html
%head
  %title The Agape Guestbook
  %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  %script{src: "http://code.jquery.com/jquery-1.10.1.min.js"}
  %script{src: "http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}
  = csrf_meta_tags
%body{:id => params[:controller] + '-' + params[:action] }
  .container.content-container.welcome
    .row
      .col-sm-12
        %h1
          Ohai#{", " + current_user.first_name if current_user}. Welcome to the Agape Guestbook.
        %p.silly-nav
          = link_to "Home", root_url
          = link_to "Update profile", edit_user_path(current_user.id) if current_user
          = link_to "Sign out", signout_path, id: "sign_out" if current_user
          = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" unless current_user
  = yield
